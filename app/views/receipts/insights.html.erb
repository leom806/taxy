<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Insights</h1>
  </div>

  <div id="insights" class="mx-auto mt-12">
    <div class="my-12">
      <p class="ml-5 py-5 text-slate-500 font-medium">Total Receipts created Hourly</p>
      <%= area_chart @receipts_hourly %>
    </div>

    <div class="my-12">
      <p class="ml-5 py-5 text-slate-500 font-medium">Total Items by Receipt</p>
      <%= bar_chart @receipts_items %>
    </div>
  </div>
</div>
